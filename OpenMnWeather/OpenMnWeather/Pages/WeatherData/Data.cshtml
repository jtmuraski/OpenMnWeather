@page "{StartDate:DateTime?}/{EndDate:DateTime?}"
@model OpenMnWeather.Pages.WeatherData.DataModel
@{
}

<div>
    <form method="get" asp-page-handler="OnPost">
        <label asp-for="StartDate">Start Date</label>
        <div id="errorMessage">
            <span asp-validation-for="StartDate"></span>
        </div>  
       <ejs-datepicker id="StartDate" ejs-for="StartDate"></ejs-datepicker>
        <ejs-datepicker id="EndDate" ejs-for="EndDate"></ejs-datepicker>
        <ejs-button id="submitButton" content="Search These Dates"></ejs-button>
    </form>
</div>
<table class="table table-striped">
    <tr>
        <th>Station Id</th>
        <th>Observation Time</th>
        <th>Temperature (Degrees C)</th>
        <th>Precipitation (Inches)</th>
    </tr>
    @foreach(var metar in Model.Metars)
            {
                <tr>
                    <th>@metar.StationId</th>
                    <th>@metar.ObservationTime.ToLocalTime()</th>
                    <th>@metar.TempC</th>
                    <th>@metar.PrecipIn</th>
                </tr>
            }
</table>
